<% layout("layouts/boilerplate")%>
<div id="index-bg"></div>

<!-- Vignette -->
<div id="vignette">
  <div id="vignette-left"></div>
  <div id="vignette-right"></div>
  <div id="vignette-top"></div>
  <div id="vignette-bottom"></div>
</div>

<!-- Navbar -->
<%- include("../partials/navbar")%>

<!-- Date/Time -->
<%- include("../partials/datetime")%>

<!-- Main -->
<div id="new-form-container">
  <h1>Edit Park</h1>
  <form id="new-form" action="/parks/<%= park._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input
        type="text"
        id="title"
        name="park[title]"
        maxlength="30"
        value="<%= park.title %> "
      />
    </div>
    <div>
      <label for="location">Location</label>
      <input
        type="text"
        id="location"
        name="park[location]"
        maxlength="50"
        value="<%= park.location %> "
      />
    </div>
    <div>
      <label for="image">Image</label>
      <input
        type="text"
        id="image"
        name="park[image]"
        maxlength="400"
        value="<%= park.image %> "
      />
    </div>
    <div id="new-form-radios">
      <p>Fee(s)</p>
      <input type="radio" id="none" name="park[fees]" value="none" checked />
      <label for="none">None</label>
      <input type="radio" id="entry" name="park[fees]" value="entry" />
      <label for="entry">Entry</label>
      <input type="radio" id="parking" name="park[fees]" value="parking" />
      <label for="parking">Parking</label>
      <input
        type="radio"
        id="entry+parking"
        name="park[fees]"
        value="entry+parking"
      />
      <label for="entry+parking">Entry & Parking</label>
    </div>
    <div>
      <label for="description">Description</label>
      <textarea
        type="text"
        id="description"
        cols="36"
        rows="3"
        name="park[description]"
        maxlength="80"
      >
<%= park.description %></textarea
      >
    </div>
    <button>Save Park</button>
  </form>
  <a href="/parks">All Parks</a>
</div>

<!-- Footer -->
<%- include("../partials/footer")%>
<script defer src="/js/script.js"></script>
